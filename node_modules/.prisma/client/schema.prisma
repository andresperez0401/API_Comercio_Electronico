generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  idUsuario String @id
  correo    String @unique
  clave     String
  nombre    String
  apellido  String
}

model Producto {
  idProducto     String @id
  nombre         String @unique
  descripcion    String
  precio         Float
  disponibilidad Int
}
